<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button_style">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="main_title_style">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="main_subTitle_style">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

</resources>